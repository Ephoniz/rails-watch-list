<div class="lists-title-body">
  <h1 class="lists-title">All your lists</h1>
  <%= link_to  "Create new list", new_list_path, class: "new-list-btn"%>
</div>

<div class="container">
  <div class="lists-container">
    <div class="list-second-container">
      <% @lists.each do |list|%>
         <%= link_to list_path(list) do %>
          <div class="list-card" style="background: linear-gradient(90deg, rgba(0, 0, 0, 0.2) 0%, rgba(11, 11, 63, 0.5) 49%, rgba(0,0,0,0.2) 100%), url(<%= list_image(list) %>)">
            <p><%= list.name %></p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

