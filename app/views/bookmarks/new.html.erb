<div class="container">
  <div class="form-box">
  <h1>Create new bookmark</h1>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie, prompt: 'Select a movie', input_html: { class: 'select2' } %>
    <%= f.button :submit %>
  <% end %>
  </div>
</div>